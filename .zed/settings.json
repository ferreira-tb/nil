{
  "file_scan_exclusions": [
    "**/.git",
    "**/node_modules",
    "**/target"
  ],
  "languages": {
    "CSS": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "HTML": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "JSON": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "JSONC": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "PowerShell": {
      "tab_size": 2
    },
    "Rust": {
      "tab_size": 2
    },
    "TypeScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "Vue.js": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    }
  }
}
